<%- include('./partials/head2') %>
<%- include('./partials/navbar') %>
<body>
  <div class="blogs-container">
    <header class="blogs-header" data-aos="fade-up">
      <h1>Your Blog Posts</h1>
      <!-- <a href="/createBlog" class="new-blog-btn">
        <i class="fas fa-plus"></i> New Blog
      </a> -->
    </header>

    <div class="blogs-grid" data-aos="fade-up">
      <% if (blogs && blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <article class="blog-card">
            <div class="blog-image">
              <img 
                src="<%= blog.Image ? blog.Image.replace('public/', '') : '/images/default-blog.jpg' %>" 
                alt="<%= blog.title %>"
                onerror="this.src='/images/default-blog.jpg'"
              >
            </div>
            <div class="blog-content">
              <h2><%= blog.title %></h2>
              <p><%= blog.content.substring(0, 150) %>...</p>
              
              <div class="blog-meta">
                <span class="date">
                  <i class="far fa-calendar"></i>
                  <%= new Date(blog._id.getTimestamp()).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  }) %>
                </span>
                <% if(blog.likes && blog.likes.length > 0) { %>
                  <span class="likes">
                    <i class="fas fa-heart"></i>
                    <%= blog.likes.length %>
                  </span>
                <% } %>
              </div>

              <% if(blog.tags && blog.tags.length > 0) { %>
                <div class="tags">
                  <% blog.tags.forEach(tag => { %>
                    <span class="tag"><%= tag %></span>
                  <% }) %>
                </div>
              <% } %>

              <div class="blog-actions">
                <a href="/blog/<%= blog._id %>" class="read-more">
                  Read More <i class="fas fa-arrow-right"></i>
                </a>
                <div class="action-buttons">
                  <a href="/blog/edit/<%= blog._id %>" class="edit-btn">
                    <i class="fas fa-edit"></i>
                  </a>
                    <button class="delete-btn" data-blog-id="<%= blog._id %>">
                      <i class="fas fa-trash"></i>
                    </button>
                </div>
              </div>
            </div>
          </article>
        <% }) %>
      <% } else { %>
        <div class="no-blogs" data-aos="fade-up">
          <i class="fas fa-pencil-alt"></i>
          <h2>No blogs yet</h2>
          <p>Start writing your first blog post today!</p>
          <a href="/createBlog" class="cta-btn">Create Blog</a>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
        const deleteButtons = document.querySelectorAll('.delete-btn');
        deleteButtons.forEach(button => {
            button.addEventListener('click', async () => {
                if (confirm('Are you sure you want to delete this blog?')) {
                    const blogId = button.dataset.blogId;
                    try {
                        const response = await fetch('/deleteBlog', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ id: blogId })
                        });
                        
                        if (response.ok) {
                            button.closest('.blog-card').remove();
                        } else {
                            throw new Error('Failed to delete blog');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('Failed to delete blog post');
                    }
                }
            });
        });
    });
  </script>
</body>
</html>